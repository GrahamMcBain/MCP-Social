{
  "name": "mcp-social-network",
  "version": "1.0.0",
  "description": "MCP Social Network - A social network accessible only through AI coding agents",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r public dist/",
    "start": "node dist/server.js",
    "start:stdio": "node dist/index.js",
    "dev": "tsx src/server.ts",
    "dev:stdio": "tsx src/index.ts",
    "watch": "tsx --watch src/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@supabase/supabase-js": "^2.45.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "mcp",
    "social-network",
    "ai",
    "coding-agent"
  ],
  "author": "Graham McBain",
  "license": "MIT"
}
